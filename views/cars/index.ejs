<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <side>
        <a href="/">Home</a>
        <a href="/cars/new">Add Car</a>
    </side>

    <h1>Inventory</h1>

    <% if(!cars.length){  %>
        <p>You have no inventory!</p>
      <% } %> 

    <ul>
        <% cars.forEach(car => { %>
            <a href="/cars/<%= car._id %>">
              <li><%= car.year %> <%= car.make %> - <%= car.model %></li>
            </a>
            <% }); %>
    </ul>
</body>
</html>